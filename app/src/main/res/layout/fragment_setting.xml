<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="40dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/setting_avatar"
                android:layout_centerVertical="true"
                android:src="@drawable/logo"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/setting_id"
                android:text="1514011414"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/setting_avatar"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/setting_credit_hint"
                android:layout_toEndOf="@+id/setting_avatar"
                android:layout_below="@+id/setting_id"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                android:text="信用分："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/setting_credit"
                android:layout_toEndOf="@+id/setting_credit_hint"
                android:layout_below="@+id/setting_id"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:background="@color/color_split_line"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:id="@+id/setting_revise"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:text="@string/setting_revise"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

          <!--  <ImageView
                android:id="@+id/setting_revise_detail"
                android:src="@drawable/ic_chevron_right_grey_24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />-->
        </RelativeLayout>

        <TextView
            android:background="@color/color_split_line"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:id="@+id/setting_notice"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:text="@string/setting_notice"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

          <!--  <ImageView
                android:id="@+id/setting_notice_detail"
                android:src="@drawable/ic_chevron_right_grey_24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />-->
        </RelativeLayout>

        <TextView
            android:background="@color/color_split_line"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:id="@+id/setting_about"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:text="@string/setting_about"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

          <!--  <ImageView
                android:id="@+id/setting_about_detail"
                android:src="@drawable/ic_chevron_right_grey_24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />-->
        </RelativeLayout>

        <TextView
            android:background="@color/color_split_line"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>