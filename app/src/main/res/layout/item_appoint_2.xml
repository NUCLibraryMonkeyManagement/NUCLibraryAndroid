<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        app:cardBackgroundColor="@color/google_green"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_width="match_parent"
        android:elevation="20dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="5dp"
        android:layout_height="140dp">
        <RelativeLayout
            android:padding="10dp"
            android:background="#00000000"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <cn.iwgang.countdownview.CountdownView
                android:id="@+id/count_down"
                app:timeTextSize="50sp"
                app:isShowHour="true"
                app:timeTextColor="@color/color_white"
                app:suffixTextColor="@color/color_white"
                app:suffixTextSize="30sp"
                app:isTimeTextBold="true"
                app:timeBgColor="@color/google_yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/count_down"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/floor"
                    android:text="1"
                    android:textColor="@color/color_white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="L"
                    android:textColor="@color/color_white"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/address"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="主楼 201"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>